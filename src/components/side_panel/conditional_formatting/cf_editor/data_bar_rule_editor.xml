<templates>
  <t t-name="o-spreadsheet-DataBarEditor">
    <div class="o-cf-data-bar-editor">
      <div class="o-section-subtitle">Color</div>
      <RoundColorPicker
        currentColor="colorNumberToHex(rule.color)"
        onColorPicked.bind="(color) => store.updateDataBarColor(color)"
        disableNoColor="true"
      />
      <div class="o-section-subtitle">Range of values</div>
      <SelectionInput
        ranges="store.rangeValues"
        class="'o-range'"
        isInvalid="false"
        hasSingleRange="true"
        onSelectionChanged.bind="(ranges) => store.onDataBarRangeUpdate(ranges)"
        onSelectionConfirmed.bind="() => store.onDataBarRangeChange()"
        required="false"
      />
    </div>
  </t>
</templates>
