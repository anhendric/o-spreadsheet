<templates>
  <t t-name="o-spreadsheet-ConditionalFormattingPanel">
    <div class="o-cf h-100 overflow-auto" t-ref="cfList">
      <t t-foreach="conditionalFormats" t-as="cf" t-key="cf.id">
        <div class="o-cf-preview-container" t-att-style="getPreviewDivStyle(cf)">
          <ConditionalFormattingPreview
            conditionalFormat="cf"
            class="dragAndDrop.draggedItemId === cf.id ? 'o-cf-dragging' : ''"
            onMouseDown="(ev) => this.onPreviewMouseDown(cf, ev)"
          />
        </div>
      </t>
      <div class="o-button-link p-4 o-cf-add float-end" t-on-click="addConditionalFormat">
        + Add another rule
      </div>
    </div>
  </t>
</templates>
